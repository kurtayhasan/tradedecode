import fs from "fs";
import { marked } from "marked";

export function getStaticPaths() {
  const postsDir = "src/content/posts";
  
  if (!fs.existsSync(postsDir)) {
    return [];
  }
  
  const files = fs.readdirSync(postsDir).filter(f => f.endsWith('.md'));
  
  return files.map(file => {
    const raw = fs.readFileSync(`${postsDir}/${file}`, "utf8");
    
    // Extract frontmatter
    const title = raw.match(/title: "(.*)"/)?.[1] || "Untitled";
    const date = raw.match(/date: "(.*)"/)?.[1] || "";
    const description = raw.match(/description: "(.*)"/)?.[1] || "";
    const slug = raw.match(/slug: "(.*)"/)?.[1] || file.replace(/\.md$/, "");
    
    // Extract content (everything after frontmatter)
    const contentMatch = raw.match(/---\n[\s\S]*?\n---\n([\s\S]*)/);
    const markdownContent = contentMatch ? contentMatch[1].trim() : raw;
    
    // Convert markdown to HTML
    const htmlContent = marked(markdownContent);
    
    return {
      params: { slug },
      props: { title, date, description, content: htmlContent }
    };
  });
}

const { title, date, description, content } = Astro.props;
