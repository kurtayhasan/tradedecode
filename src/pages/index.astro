import fs from "fs";

const postsDir = "src/content/posts";
const files = fs.existsSync(postsDir) ? fs.readdirSync(postsDir) : [];

const posts = files
  .filter(f => f.endsWith('.md'))
  .map(f => {
    const raw = fs.readFileSync(`${postsDir}/${f}`, "utf8");
    const title = raw.match(/title: "(.*)"/)?.[1] || "Untitled";
    const slug = raw.match(/slug: "(.*)"/)?.[1] || "";
    const date = raw.match(/date: "(.*)"/)?.[1] || "";
    const description = raw.match(/description: "(.*)"/)?.[1] || "";
    const tags = raw.match(/tags: \[(.*)\]/)?.[1]?.split(',').map(t => t.trim().replace(/"/g, '')) || [];
    return { title, slug, date, description, tags };
  })
  .sort((a, b) => {
    const dateA = new Date(a.date || '1970-01-01');
    const dateB = new Date(b.date || '1970-01-01');
    return dateB.getTime() - dateA.getTime();
  });

const featuredPosts = posts.slice(0, 3);
const recentPosts = posts.slice(3, 9);
